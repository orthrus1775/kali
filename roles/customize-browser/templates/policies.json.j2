{
  "policies": {
    "Certificates": {
    "Install": ["/usr/local/share/ca-certificates/BurpSuiteCA.der"]
    },
    "DisplayBookmarksToolbar": true,
    "NoDefaultBookmarks": true,
    "OverrideFirstRunPage": "",
    "OverridePostUpdatePage": "",
    "Homepage": {
      "URL": "file:///usr/share/kali-defaults/web/homepage.html",
      "Locked": false,
      "StartPage": "homepage"
    },
    "DisableTelemetry": true,
    "NetworkPrediction": false,
    "DNSOverHTTPS": {
      "Enabled": false
    },
    "CaptivePortal": false,
    "Extensions": {
      "Install": [
{% for item in FirefoxPlugins %}
        "https://addons.mozilla.org/firefox/downloads/latest/{{ item }}/latest.xpi"{{ "," if not loop.last }}
{% endfor %}
      ]
    },
    "FirefoxHome": {
      "Search": true,
      "TopSites": true,
      "Highlights": false,
      "Pocket": false,
      "Snippets": false,
      "Locked": false
    }
  }
}

